{# NB check the parent template also includes comments_styling.html.twig #}
<div>
    {%- if comments -%}
        <div class="component comments-section" id="comments">
            {{ comments.getBody()|raw }}
        </div>
        {%- for script in comments.getBodyLast() -%}
            {{ script|raw }}
        {%- endfor -%}
    {%- else -%}
        <a href="{{- url('comments_index', {blogId: blog.getId(), guid: post.getGuid()}) -}}"> {{- tr('link_comments_standalone') -}}</a>
    {%- endif -%}
</div>
