{% extends 'base.html.twig' %}

{% block body %}
    <div class="grid-wrapper">
        <div class="grid 2/3@bpw2 2/3@bpe">
            <div class="grid__inner">
                <div class="island br-box-page">
                    {% block content %}{% endblock %}
                </div>
            </div>
        </div>
        <div class="grid 1/3@bpw2 1/3@bpe">
            <div class="grid__inner">
                <aside>
                    <div class="sidebox component br-box-subtle">
                        <h2 class="island--squashed br-box-highlight no-margin">About Module</h2>
                        <div class="grid-wrapper"></div>
                    </div>
                    <div class="sidebox component br-box-subtle">
                        <h2 class="island--squashed br-box-highlight no-margin">Updates Module</h2>
                        <div class="grid-wrapper"></div>
                    </div>
                    <div class="sidebox component br-box-subtle">
                        <h2 class="island--squashed br-box-highlight no-margin">Recently Commented Module</h2>
                        <div class="grid-wrapper"></div>
                    </div>
                    <div class="sidebox component br-box-subtle">
                        <h2 class="island--squashed br-box-highlight no-margin">Other Modules</h2>
                        <div class="grid-wrapper"></div>
                    </div>
                    <div class="sidebox component br-box-subtle">
                        <h2 class="island--squashed br-box-highlight no-margin">Latest Tags Module</h2>
                        <div class="grid-wrapper"></div>
                    </div>
                </aside>
            </div>
        </div>
    </div>
{% endblock %}
