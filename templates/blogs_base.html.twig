{% extends 'base.html.twig' %}

{% block body %}
    <div class="grid-wrapper">
        <div class="grid 2/3@bpw2 2/3@bpe">
            <div class="island br-box-page">
                {% block content %}{% endblock %}
            </div>
        </div>
        <div class="grid 1/3@bpw2 1/3@bpe">
            <aside>
                {{ ds('aboutModule', blog) }}
                {{ ds('updatesModule', blog, tag ?? null) }}
                <div class="sidebox component br-box-subtle">
                    <h2 class="island--squashed br-box-highlight no-margin">Recently Commented Module</h2>
                    <div class="grid-wrapper"></div>
                </div>
                {% for modulePresenter in modulePresenters %}
                    {{ ds_presenter(modulePresenter) }}
                {% endfor %}
                {% if blogTags is not empty %}
                    {{ ds('blogTagsModule', blog, blogTags) }}
                {% endif %}
            </aside>
        </div>
    </div>
{% endblock %}

{% block social_image_tags %}
    {%- if blog.getImage() -%}
        <meta property="og:image" content="{{ blog.getImage().getUrl(1200,675) }}" />
    {%- else -%}
        {{- parent() -}}
    {%- endif -%}
{% endblock %}

{% block social_description %}
    <meta property="og:description" content="{{ blog.getDescription() }}" />
{% endblock %}
