{% extends 'blogs_base.html.twig' %}

{% block title %}BBC {{ tr('page_title_blogs') }} - {{ blog.getName() }} - {{ tr('page_title_author_all') }}{% endblock %}

{%- block content -%}
    <div class="component">
        <h1>{{ tr('header_author_all') }}</h1>
    </div>
    {{ ds('authorAtoZ', blog) }}
    {% if authors is empty %}
        <br/>
        <h1>{{ tr('no_results') }}</h1>
    {% else %}
        <div class="hidden visible@bpw component" aria-hidden="true">
            <div class="grid-wrapper">
                <div class="grid 1/3@bpw">
                    <p class="gamma--keyline br-keyline">{{ tr('header_author_name') }}</p>
                </div>
                <div class="grid 2/3@bpw">
                    <p class="gamma--keyline br-keyline">{{ tr('header_author_latest_post') }}</p>
                </div>
            </div>
        </div>

        <div class="component">
            <ol class="list-unstyled list-lined">
                {#$keysForComments = array();#}
                {% for author in authors %}
                    <li class="br-keyline">
                        <div class="grid-wrapper">
                            <div class="grid 1/3@bpw">
                                {{ ds('authorSummary', author, blog.getId(), authorPostResults[''~author.getFileId()].getTotal()) }}
                            </div>
                            <div class="grid 2/3@bpw">
                                {% if authorPostResults[''~author.getFileId()].getTotal() > 0 %}
                                    {{ ds('postSummary', blog, authorPostResults[''~author.getFileId()].getDomainModels()[0], {'h_tag': 3, 'show_image': false, 'show_author': false}) }}
                                    {#$keysForComments[] = $post->getForumId($this->blog);#}
                                {% else %}
                                    <p>{{ tr('author_no_posts') }}</p>
                                {% endif %}
                            </div>
                        </div>
                    </li>
                {% endfor %}
            </ol>
            {#<?=$this->commentCountScript($keysForComments);?>#}
        </div>

        {% if paginatorPresenter %}
            {{ ds_presenter(paginatorPresenter) }}
        {% endif %}
    {% endif %}
{%- endblock -%}
