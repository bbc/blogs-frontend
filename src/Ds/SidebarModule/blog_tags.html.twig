<div data-sidebar="tags" class="sidebox component br-box-subtle">
    <h2 class="island--squashed br-box-highlight no-margin">{{ tr('header_tag_list') }}</h2>
    <div class="island">
        <div class="component">
            <ul class="list-unstyled list--comma">
                {%- for tag in blog_tags.getBlogTags() -%}
                    <li>
                        <a data-bbc-container="{{ blog_tags.getBlogId() }}" data-bbc-title="sidebar-tag"
                           href="{{ path('tag_show', {blogId: blog_tags.getBlogId(), tagId: tag.getId() }) }}"> {{ tag.getName() }}</a></li>
                {%- endfor -%}
            </ul>
        </div>
        <p>
            <a data-bbc-container="{{ blog_tags.getBlogId() }}" data-bbc-title="sidebar-all-tags"
               href="{{ path('tag_index', { blogId: blog_tags.getBlogId() }) }}">{{ tr('link_see_all_tags') }}</a>
        </p>
    </div>
</div>
